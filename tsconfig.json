{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2019"],
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": ["vite/client"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["vendor"]
}
